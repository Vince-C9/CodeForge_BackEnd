# Application Configuration
APP_NAME=CodeForge
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_PORT=80
APP_SERVICE=laravel.test

# Sail/Docker User Configuration (Linux UID/GID for file permissions)
WWWGROUP=1000
WWWUSER=1000

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP Configuration
PHP_CLI_SERVER_WORKERS=4

# Encryption
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# For native PHP: Use sqlite, set DB_DATABASE to database/database.sqlite
# For Laravel Sail: Use mysql with credentials below
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=codeforge
DB_USERNAME=sail
DB_PASSWORD=password

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting, Filesystem, and Queue Configuration
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache Configuration
# For native PHP: Use database or file
# For Laravel Sail: Use redis
CACHE_STORE=redis
CACHE_PREFIX=

# Memcached Configuration
MEMCACHED_HOST=memcached

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# For Laravel Sail: Uses Mailpit (http://localhost:8025)
# For production: Configure with real SMTP credentials
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Recipient Email Addresses
# Quote/Configurator forms will be sent to MAIL_QUOTES_ADDRESS
# All other contact forms will be sent to MAIL_INFO_ADDRESS
# Replace with your actual business email addresses
MAIL_QUOTES_ADDRESS="quotes@example.com"
MAIL_INFO_ADDRESS="info@example.com"

# AWS Configuration (S3 Storage)
# Required only if using AWS S3 for file storage
# Generate credentials at: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration (Frontend Asset Building)
VITE_APP_NAME="${APP_NAME}"
VITE_PORT=5173

# Laravel Sail Port Forwarding Configuration
# These ports map Docker services to your local machine
FORWARD_DB_PORT=3306
FORWARD_REDIS_PORT=6379
FORWARD_MAILPIT_PORT=1025
FORWARD_MAILPIT_DASHBOARD_PORT=8025

# Laravel Sail Xdebug Configuration
SAIL_XDEBUG_MODE=off
SAIL_XDEBUG_CONFIG="client_host=host.docker.internal"

# Google reCAPTCHA v3 Configuration
# Sign up at: https://www.google.com/recaptcha/admin
# Get your site key (public) and secret key (private)
# IMPORTANT: Never commit real keys to version control
RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here
RECAPTCHA_SKIP_TESTING=true
